<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <solid android:color="@color/colorPrimaryDark"/>


    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"/>

    <!--覆盖solid-->
    <!--angle 只有当时线性的时候才起效，默认是0（从左到右），90上到下，180就是右到左-->
    <!--startcolor渐变开始 的颜色-->
    <!--centercolor 渐变中间的颜色-->
    <!--endcolor 渐变结束的颜色-->

    <gradient
        android:angle="180"
        android:startColor="@android:color/holo_purple"
        android:type="linear"/>




</shape>